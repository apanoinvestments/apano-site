---
const { kicker, headline, subheadline, cta = [], image, highlights = [] } = Astro.props;
---

<section class="hero">
  <div class="container hero__grid">
    <div class="hero__copy">
      {kicker && <div class="kicker">{kicker}</div>}
      <h1 class="hero__h1">{headline}</h1>
      {subheadline && <p class="hero__p">{subheadline}</p>}

      {highlights?.length ? (
        <div class="hero__chips" aria-label="Highlights">
          {highlights.map((h) => <span class="chip">{h.label}</span>)}
        </div>
      ) : null}

      {cta?.length ? (
        <div class="hero__cta">
          {cta.map((b) => (
            <a class={`btn ${b.variant === "primary" ? "primary" : "secondary"}`} href={b.href}>
              {b.label}
            </a>
          ))}
        </div>
      ) : null}
    </div>

    <div class="hero__media">
      {image?.src ? (
        <img class="hero__img" src={image.src} alt={image.alt ?? ""} loading="eager" />
      ) : (
        <div class="hero__placeholder" aria-hidden="true"></div>
      )}

      <div class="hero__glass" aria-hidden="true">
        <div class="hero__metric">
          <div class="hero__metricLabel">Fokus</div>
          <div class="hero__metricValue">Strategie & Einordnung</div>
        </div>
        <div class="hero__metric">
          <div class="hero__metricLabel">Updates</div>
          <div class="hero__metricValue">Webinare · News · Berichte</div>
        </div>
      </div>
    </div>
  </div>
</section>
