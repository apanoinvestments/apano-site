---
import BaseLayout from "../layouts/BaseLayout.astro";

import Hero from "../components/Hero.astro";
import TrustBar from "../components/TrustBar.astro";
import CardGrid from "../components/CardGrid.astro";
import TeaserGrid from "../components/TeaserGrid.astro";
import QuickLinks from "../components/QuickLinks.astro";

import home from "../content/pages/home.json";

const { page_title, meta_description, nav, sections, footer } = home;
---

<BaseLayout title={page_title} description={meta_description} nav={nav} footer={footer}>
  {sections.map((s) => {
    switch (s.type) {
      case "hero":
        return <Hero {...s} />;
      case "trustbar":
        return <TrustBar {...s} />;
      case "cards":
        return <CardGrid {...s} />;
      case "teasers":
        return <TeaserGrid {...s} />;
      case "quicklinks":
        return <QuickLinks {...s} />;
      default:
        return null;
    }
  })}
</BaseLayout>
