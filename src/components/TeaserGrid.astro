---
const { kicker, headline, items = [] } = Astro.props;
---

<section class="section">
  <div class="container">
    {kicker && <div class="kicker">{kicker}</div>}
    {headline && <h2 class="h2">{headline}</h2>}

    <div class="grid teasers" style="margin-top:18px;">
      {items.map((t) => (
        <a class="teaser" href={t.href}>
          <div class="teaser__media">
            {t.image?.src ? (
              <img src={t.image.src} alt={t.image.alt ?? ""} loading="lazy" />
            ) : (
              <div class="teaser__mediaPh" aria-hidden="true"></div>
            )}
          </div>
          <div class="teaser__body">
            <div class="teaser__title">{t.title}</div>
            {t.text && <div class="small" style="margin-top:6px;">{t.text}</div>}
            <div class="teaser__cta">{t.ctaLabel ?? "Öffnen"} →</div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
